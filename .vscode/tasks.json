{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake -S . -B build -G \"Unix Makefiles\"",
      "problemMatcher": "$gcc",
      "group": "build"
    },
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake --build build",
      "problemMatcher": "$gcc",
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": "CMake: Configure"
    },
    {
      "label": "CMake: Clean",
      "type": "shell",
      "command": "cmake --build build --target clean"
    }
  ]
}
